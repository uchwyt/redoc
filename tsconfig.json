{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "target": "es2019",
    "module": "esnext",
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "outDir": "lib",
    "pretty": true,
    "lib": ["esnext", "dom", "dom.iterable", "WebWorker.ImportScripts"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": false,
  "exclude": ["node_modules", ".tmp", "lib", "e2e/**"],
  "include": [
    "./custom.d.ts",
    "./src/types/styled-components.d.ts",
    "./demo/playground/hmr-playground.tsx",
    "./src/**/*.ts?",
    "demo/*.tsx",
    "src/empty.js"
  ]
}
